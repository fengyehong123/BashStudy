; 执行自动登录脚本
include '00-自動ログイン.ttl'

; 将脚本终止1秒钟，目的是等到登录界面完全显示之后
; 再继续执行下面的脚本，可以保证弹出框显示在登录界面的上一层
pause 1

; 创建 arr1 到 arr10的变量
for countNum 1 10

    ; 将数字的countNum变量 转换为 字符串的countStr变量
    int2str countStr countNum

    ;定义一个临时变量
    tmp = 'arr'

    ; 在for循环中进行字符串拼接, 拼接出这种字符串
    /*
        arr1=1
        arr2=2
        arr3=3
    */
    strconcat tmp countStr
    strconcat tmp '='
    strconcat tmp countStr

    ; ⏹将字符串当做ttl脚本命令执行, 从而实现动态的定义变量
    execcmnd tmp
next

; 隐藏输入框的宏窗口部分
show 0

messagebox arr1 'variable1'
messagebox arr2 'variable2'
messagebox arr3 'variable3'
messagebox arr4 'variable4'
messagebox arr5 'variable5'
messagebox arr6 'variable6'
messagebox arr7 'variable7'
messagebox arr8 'variable8'
messagebox arr9 'variable9'
messagebox arr10 'variable10'

; 将当前的主窗口给显示出来
show 1